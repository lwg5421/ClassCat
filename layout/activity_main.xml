<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF7">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="24dp">

    </ScrollView>

    <!-- 하단 탭 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_selector"
        app:itemTextColor="@color/nav_selector"
        app:labelVisibilityMode="labeled" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="633dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_anchor="@+id/scrollView3"
        app:layout_anchorGravity="center">

        <!-- 앱 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출석 냥이"
            android:textColor="#333"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="(ClassCat)"
            android:textColor="#888"
            android:textSize="14sp" />

        <!-- 버튼 -->
        <Button
            android:id="@+id/btnStartWork"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#EFEFEF"
            android:text="출석 체크"
            android:textColor="#333" />

        <Button
            android:id="@+id/btnWorkLog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#EFEFEF"
            android:text="자습 모드"
            android:textColor="#333" />

        <!-- 고양이 이미지 -->
        <ImageView
            android:id="@+id/catImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:contentDescription="cat image"
            android:scaleType="fitCenter"
            android:src="@drawable/cat_lv5" />

        <TextView
            android:id="@+id/catLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Lv.5"
            android:textColor="#444"
            android:textSize="20sp" />

        <!-- XP Progress -->
        <ProgressBar
            android:id="@+id/xpProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="43"
            android:progressDrawable="@drawable/progress_bar_xp" />

        <TextView
            android:id="@+id/xpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="43 / 100 XP"
            android:textColor="#444"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
