<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF7">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- 앱 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알바냥이"
                android:textColor="#333"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="(PartTimeCat)"
                android:textColor="#888"
                android:textSize="14sp" />

            <!-- 버튼 -->
            <Button
                android:id="@+id/btnStartWork"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#EFEFEF"
                android:text="근무 시작"
                android:textColor="#333" />

            <Button
                android:id="@+id/btnWorkLog"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#EFEFEF"
                android:text="근무 기록"
                android:textColor="#333" />

            <!-- 고양이 이미지 -->
            <ImageView
                android:id="@+id/catImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:contentDescription="cat image"
                android:scaleType="fitCenter"
                android:src="@drawable/cat_lv5" />

            <TextView
                android:id="@+id/catLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Lv.5"
                android:textColor="#444"
                android:textSize="20sp" />

            <!-- XP Progress -->
            <ProgressBar
                android:id="@+id/xpProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="43"
                 />

            <TextView
                android:id="@+id/xpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="43 / 100 XP"
                android:textColor="#444"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <!-- 하단 탭은 MainActivity에 있으므로 여기에는 안 넣어도 됨 -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
